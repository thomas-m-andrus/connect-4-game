{
  "version": 2,
  "cli": { "defaultCollection": "@nrwl/react" },
  "defaultProject": "connect-4",
  "generators": {
    "@nrwl/react": {
      "application": { "style": "scss", "linter": "eslint", "babel": true },
      "component": { "style": "scss" },
      "library": { "style": "scss", "linter": "eslint" }
    }
  },
  "projects": {
    "connect-4": {
      "root": "apps/connect-4",
      "sourceRoot": "apps/connect-4/src",
      "projectType": "application",
      "targets": {
        "build": {
          "executor": "@nrwl/web:build",
          "outputs": ["{options.outputPath}"],
          "options": {
            "outputPath": "dist/apps/connect-4",
            "index": "apps/connect-4/src/index.html",
            "main": "apps/connect-4/src/main.tsx",
            "polyfills": "apps/connect-4/src/polyfills.ts",
            "tsConfig": "apps/connect-4/tsconfig.app.json",
            "assets": [
              "apps/connect-4/src/favicon.ico",
              "apps/connect-4/src/assets"
            ],
            "styles": ["apps/connect-4/src/styles.scss"],
            "scripts": [],
            "webpackConfig": "@nrwl/react/plugins/webpack"
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "apps/connect-4/src/environments/environment.ts",
                  "with": "apps/connect-4/src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "extractLicenses": true,
              "vendorChunk": false,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                }
              ]
            }
          }
        },
        "serve": {
          "executor": "@nrwl/web:dev-server",
          "options": { "buildTarget": "connect-4:build" },
          "configurations": {
            "production": { "buildTarget": "connect-4:build:production" }
          }
        },
        "lint": {
          "executor": "@nrwl/linter:eslint",
          "options": {
            "lintFilePatterns": ["apps/connect-4/**/*.{ts,tsx,js,jsx}"]
          }
        },
        "test": {
          "executor": "@nrwl/jest:jest",
          "outputs": ["coverage/apps/connect-4"],
          "options": {
            "jestConfig": "apps/connect-4/jest.config.js",
            "passWithNoTests": true
          }
        }
      }
    },
    "connect-4-e2e": {
      "root": "apps/connect-4-e2e",
      "sourceRoot": "apps/connect-4-e2e/src",
      "projectType": "application",
      "targets": {
        "e2e": {
          "executor": "@nrwl/cypress:cypress",
          "options": {
            "cypressConfig": "apps/connect-4-e2e/cypress.json",
            "tsConfig": "apps/connect-4-e2e/tsconfig.e2e.json",
            "devServerTarget": "connect-4:serve"
          },
          "configurations": {
            "production": { "devServerTarget": "connect-4:serve:production" }
          }
        },
        "lint": {
          "executor": "@nrwl/linter:eslint",
          "options": { "lintFilePatterns": ["apps/connect-4-e2e/**/*.{js,ts}"] }
        }
      }
    },
    "types": {
      "root": "libs/types",
      "sourceRoot": "libs/types/src",
      "projectType": "library",
      "targets": {
        "lint": {
          "executor": "@nrwl/linter:eslint",
          "options": { "lintFilePatterns": ["libs/types/**/*.ts"] }
        }
      }
    },
    "game-logic": {
      "root": "libs/game-logic",
      "sourceRoot": "libs/game-logic/src",
      "projectType": "library",
      "targets": {
        "lint": {
          "executor": "@nrwl/linter:eslint",
          "options": { "lintFilePatterns": ["libs/game-logic/**/*.ts"] }
        },
        "test": {
          "executor": "@nrwl/jest:jest",
          "outputs": ["coverage/libs/game-logic"],
          "options": {
            "jestConfig": "libs/game-logic/jest.config.js",
            "passWithNoTests": true
          }
        }
      }
    },
    "ui": {
      "root": "libs/ui",
      "sourceRoot": "libs/ui/src",
      "projectType": "library",
      "targets": {
        "lint": {
          "executor": "@nrwl/linter:eslint",
          "options": { "lintFilePatterns": ["libs/ui/**/*.{ts,tsx,js,jsx}"] }
        },
        "test": {
          "executor": "@nrwl/jest:jest",
          "outputs": ["coverage/libs/ui"],
          "options": {
            "jestConfig": "libs/ui/jest.config.js",
            "passWithNoTests": true
          }
        },
        "storybook": {
          "executor": "@nrwl/storybook:storybook",
          "options": {
            "uiFramework": "@storybook/react",
            "port": 4400,
            "config": { "configFolder": "libs/ui/.storybook" }
          },
          "configurations": { "ci": { "quiet": true } }
        },
        "build-storybook": {
          "executor": "@nrwl/storybook:build",
          "outputs": ["{options.outputPath}"],
          "options": {
            "uiFramework": "@storybook/react",
            "outputPath": "dist/storybook/ui",
            "config": { "configFolder": "libs/ui/.storybook" }
          },
          "configurations": { "ci": { "quiet": true } }
        }
      }
    },
    "wrapper": {
      "root": "libs/wrapper",
      "sourceRoot": "libs/wrapper/src",
      "projectType": "library",
      "targets": {
        "lint": {
          "executor": "@nrwl/linter:eslint",
          "options": {
            "lintFilePatterns": ["libs/wrapper/**/*.{ts,tsx,js,jsx}"]
          }
        },
        "test": {
          "executor": "@nrwl/jest:jest",
          "outputs": ["coverage/libs/wrapper"],
          "options": {
            "jestConfig": "libs/wrapper/jest.config.js",
            "passWithNoTests": true
          }
        }
      }
    }
  }
}
